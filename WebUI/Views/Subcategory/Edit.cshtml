@model Subcategory
@{
    ViewData["Title"] = "Update Subcategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Category List <span class="text-danger">*</span></label>
                                <select class="form-control" asp-for="CategoryId" name="CategoryId" required>
                                    <option>-- Select One Category --</option>
                                    @foreach (var item in ViewBag.Categories)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Subcategory Name <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" asp-for="Name" name="Name" required>
                            </div>
                        </div>
                    </div>
                    <div class="m-t-20 text-center">
                        <button type="submit" class="btn btn-primary submit-btn">Update Subcategory</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@model Subcategory
@{
    ViewData["Title"] = "Subcategory Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-12">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box">
                    <div class="card-block">
                        <p class="content-group">
                            <a asp-controller="Subcategory" asp-action="Create" class="btn btn-outline-primary btn-sm btn-rounded">+ Add New One</a><a asp-controller="Subcategory" asp-action="Index" class="btn btn-outline-success btn-sm btn-rounded">Subcategory List</a><a asp-controller="Subcategory" asp-action="SubcategoryManage" class="btn btn-outline-dark btn-sm btn-rounded">Subcategory Manager</a>
                        </p>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-4">
                                Created At
                            </dt>
                            <dd class="col-sm-8">
                                @Model.CreatedDate.ToLongDateString()
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
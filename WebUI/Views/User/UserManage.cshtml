@model IEnumerable<AppUser>
@{
	ViewData["Title"] = "User Manager";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
	<div class="content">
		<div class="row">
			<div class="col-sm-4 col-3">
				<h4 class="page-title">@ViewData["Title"]</h4>
			</div>
			<div class="col-sm-8 col-9 text-right m-b-20">
				<a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-sm btn-rounded btn-rounded float-right"><i class="fa fa-plus"></i> Add A New One</a> <a asp-controller="User" asp-action="Index" class="btn btn-outline-dark btn-sm btn-rounded btn-rounded float-right">User List</a>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="table-responsive">
					<table class="table table-border table-striped custom-table mb-0">
						<thead>
							<tr>
								<th>Name Surname</th>
								<th>Email Address</th>
								<th>Username</th>
								<th>Status</th>
								<th class="text-right">Ops</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.NameSurname</td>
									<td>@item.Email</td>
									<td>@item.UserName</td>
									<td>
										@if (item.IsActive == true)
										{
											<span class="badge badge-info">Active </span>
											<br />
											<a asp-controller="User" asp-action="SetDeActive" asp-route-id="@item.Id" class="custom-badge status-green"> Set DeActive</a>
										}
										else
										{
											<span class="badge badge-danger">DeActive</span>
											<br />
											<a asp-controller="User" asp-action="SetActive" asp-route-id="@item.Id" class="custom-badge status-green"> Set Active</a>
										}
									</td>
									<td class="text-right">
										<div class="dropdown dropdown-action">
											<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
											<div class="dropdown-menu dropdown-menu-right">
												<a class="dropdown-item" asp-controller="User" asp-action="Detail" asp-route-id="@item.Id"><i class="fa fa-info m-r-5"></i> Detail</a>
												<a class="dropdown-item" asp-controller="User" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil m-r-5"></i> Edit</a>
												<a class="dropdown-item" asp-controller="User" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
											</div>
										</div>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
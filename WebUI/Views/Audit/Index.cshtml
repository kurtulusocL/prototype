@model IEnumerable<Audit>
@{
	ViewData["Title"] = "Audit List";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
	<div class="content">
		<div class="row">
			<div class="col-sm-4 col-3">
				<h4 class="page-title">@ViewData["Title"]</h4>
			</div>
			<div class="col-sm-8 col-9 text-right m-b-20">
				<a asp-controller="Audit" asp-action="AuditManage" class="btn btn-outline-dark btn-sm btn-rounded float-right">Audit Manager</a>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="table-responsive">
					<table class="table table-border table-striped custom-table mb-0">
						<thead>
							<tr>
								<th>User Info</th>
								<th>Device Info</th>
								<th>Area Accessed</th>
								<th>Mac Address</th>
								<th>Ip Address</th>
								<th>Used Proxy</th>
								<th>Status</th>
								<th class="text-right">Ops</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										@item.Username
									</td>
									<td>
										<ul>
											<li>Device: @item.Device</li>
											<li>Model: @item.DeviceModel</li>
										</ul>
									</td>
									<td>@item.AreaAccessed</td>
									<td>
										<ul>
											<li>Mac Address: @item.MacAddress</li>
											<li>Manufacturer: @item.Manufacturer</li>
										</ul>
									</td>									
									<td>
										<ul>
											<li>Ip Address: @item.IPAddress</li>
											<li>Remote IP: @item.RemoteIpAddress</li>
											<li>Local Ip: @item.LocalIPAddress</li>
											<li>Vpn Ip: @item.IpAddressVPN</li>
										</ul>
									</td>
									<td>@item.ProxyConnection</td>
									<td>
										@if (item.IsActive == true)
										{
											<span class="custom-badge status-green">Active</span>
										}
										else
										{
											<span class="custom-badge status-warning">DeActive</span>
										}
									</td>
									<td class="text-right">
										<div class="dropdown dropdown-action">
											<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
											<div class="dropdown-menu dropdown-menu-right">
												<a class="dropdown-item" asp-controller="Audit" asp-action="Detail" asp-route-id="@item.Id"><i class="fa fa-info m-r-5"></i> Detail</a>
											</div>
										</div>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
@model RegisterDto
@{
	ViewData["Title"] = "Create A New Account";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
	<title>Prototype >@ViewData["Title"]</title>
	<link rel="stylesheet" type="text/css" href="~/temp/assets/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="~/temp/assets/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="~/temp/assets/css/select2.min.css">
	<link rel="stylesheet" type="text/css" href="~/temp/assets/css/dataTables.bootstrap4.min.css">
	<link rel="stylesheet" type="text/css" href="~/temp/assets/css/bootstrap-datetimepicker.min.css">
	<link rel="stylesheet" type="text/css" href="~/temp/assets/css/style.css">
	<!--[if lt IE 9]>
		<script src="assets/js/html5shiv.min.js"></script>
		<script src="assets/js/respond.min.js"></script>
	<![endif]-->
</head>
<body>
	<div class="page-wrapper">
		<div class="content">
			<div class="row">
				<div class="col-lg-8 offset-lg-2">
					<h4 class="page-title">@ViewData["Title"]</h4>
				</div>
			</div>
			<br />
			<div class="row">
				<div class="col-lg-12">
					<form asp-controller="Account" asp-action="Register" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
						@Html.AntiForgeryToken()
						<div class="row">
							<div class="col-sm-4">
								<div class="form-group">
									<label>Name Surname <span class="text-danger">*</span></label>
									<input class="form-control" type="text" asp-for="NameSurname" name="NameSurname" required>
								</div>
							</div>
							<div class="col-sm-4">
								<div class="form-group">
									<label>Username <span class="text-danger">*</span></label>
									<input class="form-control" type="text" asp-for="Username" name="Username" required>
								</div>
							</div>
							<div class="col-sm-4">
								<div class="form-group">
									<label>Email Address <span class="text-danger">*</span></label>
									<input class="form-control" type="email" asp-for="Email" name="Email" required>
								</div>
							</div>
							<div class="col-sm-6">
								<div class="form-group">
									<label>Password <span class="text-danger">*</span></label>
									<input class="form-control" type="password" asp-for="Password" name="Password" required>
								</div>
							</div>
							<div class="col-sm-6">
								<div class="form-group">
									<label>Confirm Password <span class="text-danger">*</span></label>
									<input class="form-control" type="password" asp-for="ConfirmPassword" name="ConfirmPassword" required>
								</div>
							</div>
						</div>
						<div class="m-t-20 text-center">
							<button type="submit" class="btn btn-primary submit-btn">Register</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	<script src="~/temp/assets/js/jquery-3.2.1.min.js"></script>
	<script src="~/temp/assets/js/bootstrap-datetimepicker.min.js"></script>
	<script src="~/temp/assets/js/jquery.slimscroll.js"></script>
	<script src="~/temp/assets/js/popper.min.js"></script>
	<script src="~/temp/assets/js/select2.min.js"></script>
	<script src="~/temp/assets/js/moment.min.js"></script>
	<script src="~/temp/assets/js/bootstrap.min.js"></script>
	<script src="~/temp/assets/js/app.js"></script>
</body>
</html>
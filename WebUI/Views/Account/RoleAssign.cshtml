@model List<RoleAssignVM>
@{
    ViewData["Title"] = "Set Role(s)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-12">
                <h4 class="page-title">@ViewData["Title"]</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8">
                <div class="card-box">
                    <div class="card-block">                       
                        <div class="table-responsive">
                            <form asp-controller="Account" asp-action="RoleAssign" method="post">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Select to Role(s)</th>
                                            <th>Role Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Count; i++)
                                        {
                                            <tr>
                                                <td><input type="checkbox" asp-for="@Model[i].HasAssign" /> </td>
                                                <td>
                                                    @Model[i].RoleName
                                                    <input type="hidden" asp-for="@Model[i].RoleId" />
                                                    <input type="hidden" asp-for="@Model[i].RoleName" />
                                                </td>
                                            </tr>
                                        }
                                        <tr>
                                            <td>
                                                <button type="submit" class="btn btn-outline-success btn-sm">Set Role</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>